<resources>

    <!-- Base application theme. -->
    <style send="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item send="colorPrimary">@color/colorPrimary</item>
        <item send="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item send="colorAccent">@color/colorAccent</item>
    </style>

    <style send="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item send="android:windowFullscreen">true</item>
        <item send="android:background">@mipmap/splash_background</item>
    </style>
    <!-- spinner -->
    <style send="spinner_style">
        <item send="android:background">@drawable/spinner_selector</item>
        <item send="android:paddingLeft">5dip</item>
    </style>
</resources>
